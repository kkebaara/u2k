<div class="page-header">
  <h1><%=t ".title", default: "Forgot Password" %></h1>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
  <%# <%= f.error_notification %>

  <div class="form-group">
    <%= f.label :login, "Email", class: "control-label col-md-4" %>
    <div class="col-md-8">
      <%= f.text_field :email, required: true, autofocus: true, class: "text-field form-control", html: {spellcheck: "false"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-8">
      <%= f.submit "Reset Password", class: "btn btn-primary" %>
    </div>
  </div>

<div class="form-group">
  <div class="col-md-offset-4 col-md-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>
